<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	   http://www.springframework.org/schema/tx
	   http://www.springframework.org/schema/tx/spring-tx.xsd
	   http://www.springframework.org/schema/aop
	   http://www.springframework.org/schema/aop/spring-aop.xsd
       http://www.springframework.org/schema/context
	   http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <bean id="esConfig" class="com.cweeyii.client.ESConfig">
        <property name="clusterName" value="${es_cluster_name}"/>
        <property name="hostName" value="${es_hosts}"/>
        <property name="port" value="${es_port}"/>
    </bean>

    <bean id="enterpriseSearchHandle" class="com.cweeyii.elastic.handle.EnterpriseSearchHandle">
        <constructor-arg index="0" ref="esConfig"/>
    </bean>

</beans>